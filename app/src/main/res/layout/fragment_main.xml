<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="center_horizontal"
	    android:orientation="vertical" >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:background="@drawable/profilebackground"
            android:id="@+id/fundo" >

            <ImageView android:id="@+id/foto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:src="@drawable/ic_no_image"
                />

            <TextView android:id="@+id/info"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_toRightOf="@id/foto"
                />

            <TextView android:id="@+id/status_conexao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

         <TextView
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content" 
	      android:text="Crie novos Grupos."
          android:padding="16dp"
          android:layout_marginTop="16dp"
          android:textSize="18dp"
	      android:textColor="@color/abc_search_url_text_selected"
	      />
	    
	    <TextView 
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content" 
	      android:text="Compartilhe sua lista de compras."
          android:padding="16dp"
          android:textSize="18dp"
	      android:textColor="@color/abc_search_url_text_selected"
	      />
	    
	    <TextView 
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content" 
	      android:text="Acompanhe as compras realizadas."
          android:padding="16dp"
          android:textSize="18dp"
	      android:textColor="@color/abc_search_url_text_selected"
	      />	    
	    
	    <EditText 
	        android:id="@+id/teste_lembrete"
			android:layout_width="match_parent"
	      	android:layout_height="wrap_content"
	      	android:visibility="gone"
           	android:enabled="false"	        
	        />


       <Button
       	   android:id="@+id/botao_lembrete"
		   android:text="@string/comum_confirmar"       	   
           style="@style/ShadowText"
       	   android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:background="@drawable/button_background_disabled"
           android:gravity="center"
           android:onClick="acessarApk"
           android:padding="10dp"
           android:textColor="@color/text"
           android:textSize="20sp"
           android:textStyle="bold" 
           android:visibility="gone"
           android:enabled="false"
           />
       
       
       <Button
       	   android:id="@+id/botao_remover_oauth"
		   android:text="@string/comum_logout"       	   
           style="@style/ShadowText"
       	   android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:background="@drawable/button_background_disabled"
           android:gravity="center"
           android:onClick="logout"
           android:padding="10dp"
           android:textColor="@color/text"
           android:textSize="20sp"
           android:textStyle="bold" 
           android:visibility="gone"
           android:enabled="false"
           />         	
               	    
	</LinearLayout>
</ScrollView>