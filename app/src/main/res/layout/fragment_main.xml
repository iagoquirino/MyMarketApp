<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="center_horizontal"
	    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/profilebackground"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/ic_no_image"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Cara"
                android:textSize="18dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

	
	    <TextView android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:id="@+id/status_conexao" 
	      android:textColor="@color/abc_search_url_text_selected"/>
	    
	    <TextView 
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content" 
	      android:text="INFO BLABLABLA"
	      android:id="@+id/info"
	      android:textColor="@color/abc_search_url_text_selected"/>


	    <TextView
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content" 
	      android:text="Crie novos Grupos"
	      android:textColor="@color/abc_search_url_text_selected"
	      />
	    
	    <TextView 
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content" 
	      android:text="Compartilhe sua lista de compras"
	      android:textColor="@color/abc_search_url_text_selected"
	      />
	    
	    <TextView 
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content" 
	      android:text="Tenha informaÃ§oes das Compras Realiadas"
	      android:textColor="@color/abc_search_url_text_selected"
	      />	    
	    
	    <EditText 
	        android:id="@+id/teste_lembrete"
			android:layout_width="match_parent"
	      	android:layout_height="wrap_content"
	      	android:visibility="gone"
           	android:enabled="false"	        
	        />


       <Button
       	   android:id="@+id/botao_lembrete"
		   android:text="@string/comum_confirmar"       	   
           style="@style/ShadowText"
       	   android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:background="@drawable/button_background_disabled"
           android:gravity="center"
           android:onClick="acessarApk"
           android:padding="10dp"
           android:textColor="@color/text"
           android:textSize="20sp"
           android:textStyle="bold" 
           android:visibility="gone"
           android:enabled="false"
           />
       
       
       <Button
       	   android:id="@+id/botao_remover_oauth"
		   android:text="@string/comum_logout"       	   
           style="@style/ShadowText"
       	   android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:background="@drawable/button_background_disabled"
           android:gravity="center"
           android:onClick="logout"
           android:padding="10dp"
           android:textColor="@color/text"
           android:textSize="20sp"
           android:textStyle="bold" 
           android:visibility="gone"
           android:enabled="false"
           />         	
               	    
	</LinearLayout>
</ScrollView>